---
import type ITag from "../interfaces/ITag";

interface Props {
  tag: ITag;
}

const { tag } = Astro.props;

const color = tag.attributes.color;

let colorClasses =
  "ring-gray-700 text-gray-700 hover:ring-gray-500/50 focus:ring-gray-500/50";
switch (color) {
  case "red":
    colorClasses =
      "ring-red-700 text-red-700 hover:ring-red-500/50 focus:ring-red-500/50";
    break;
  case "yellow":
    colorClasses =
      "ring-yellow-700 text-yellow-700 hover:ring-yellow-500/50 focus:ring-yellow-500/50";
    break;
  case "green":
    colorClasses =
      "ring-green-700 text-green-700 hover:ring-green-500/50 focus:ring-green-500/50";
    break;
  case "blue":
    colorClasses =
      "ring-blue-700 text-blue-700 hover:ring-blue-500/50 focus:ring-blue-500/50";
    break;
  case "indigo":
    colorClasses =
      "ring-indigo-700 text-indigo-700 hover:ring-indigo-500/50 focus:ring-indigo-500/50";
    break;
  case "purple":
    colorClasses =
      "ring-purple-700 text-purple-700 hover:ring-purple-500/50 focus:ring-purple-500/50";
    break;
  case "pink":
    colorClasses =
      "ring-pink-600 text-pink-600 hover:ring-pink-500/50 focus:ring-pink-500/50";
    break;
  default:
    colorClasses =
      "ring-gray-600 text-gray-600 hover:ring-gray-500/50 focus:ring-gray-500/50";
    break;
}
---

<a
  href={"/sg-aa/tags/" + tag.attributes.slug}
  class={"inline-flex w-fit items-center rounded-full px-3 py-1 underline underline-offset-4 ring-1 hover:ring-4 focus:ring-4 " +
    colorClasses}>{tag.attributes.tag}</a
>
